{% extends '::base.html.twig' %}

{% block title %}Offer - index{% endblock %}



{% block body -%}
    <h1>Offer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Validfrom</th>
                <th>Validuntil</th>
                <th>Location</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offer_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.validFrom %}{{ entity.validFrom|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.validUntil %}{{ entity.validUntil|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('offer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
