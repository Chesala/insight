{% extends '::base.html.twig' %}

{% block title %}{{ 'profile.edit'|trans }}{% endblock %}

{% block body -%}
    <h1>{{ 'profile.edit'|trans }}</h1>

    <form action="{{ path('profile_update', { 'id': id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}

    <ul class="record_actions btn-group">
	    <li>
            <button class="btn" type="submit">{{ 'save'|trans }}</button>
	    </li>
		{% if is_granted('ROLE_ADMIN') %}
	    <li>
	        <a class="btn" href="{{ path('profile') }}">
	            {{ 'abort'|trans }}
	        </a>
	    </li>
		{% endif %}
	</ul>

    </form>

{% endblock %}
