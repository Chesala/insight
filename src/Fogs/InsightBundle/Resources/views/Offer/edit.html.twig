{% extends '::base.html.twig' %}

{% block title %}Offer - edit{% endblock %}



{% block body -%}
    <h1>Offer edit</h1>

    <form action="{{ path('offer_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions btn-group">
    <li>
        <a class="btn" href="{{ path('offer') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('offer_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
